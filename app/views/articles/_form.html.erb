<%= render 'shared/errors', obj: @article %>
<div class="row">
    <div class="col-xs-12">
        <%= form_for(@article, :html => {class: "form-horizontal", role: "form "}) do |f| %>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :title%>
            </div>
            <div class="col-sm-6">
                <%= f.text_field :title, class: "form-control", placeholder: "Title of Articles", autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :description%>
            </div>
            <div class="col-sm-6">
                <%= f.text_area :description, rows: 10, class:"form-control", placeholder: "Title of Articles"%>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit class:"btn btn-primary btn-lg"%>          
                </div>
            </div>
        </div>
        <% end %>
        <div class="col-xs-5 col-xs-offset-1">
            [<%= link_to "Cancel and go back to articles listing", articles_path %> ]
        </div>
    </div>
</div>
